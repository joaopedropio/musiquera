# Stage 1: Build
FROM --platform=$BUILDPLATFORM golang:1.22-alpine AS builder

WORKDIR /app

COPY go.mod ./
COPY go.sum ./
RUN go mod download

COPY . .

RUN GOOS=linux GOARCH=arm64 go build -o myapp

# Stage 2: Runtime
FROM --platform=linux/arm64 alpine:latest

WORKDIR /root/

COPY --from=builder /app/myapp .

ENTRYPOINT ["./myapp"]

